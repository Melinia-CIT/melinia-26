{
  "name": "melinia",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "bun@1.3.4",
  "scripts": {
    "dev": "turbo dev",
    "dev:outreach": "turbo dev --filter=@melinia/outreach",
    "dev:api": "turbo dev --filter=@melinia/api",
    "build": "turbo build",
    "build:outreach": "turbo build --filter=@melinia/outreach",
    "build:api": "turbo build --filter=@melinia/api",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test"
  },
  "devDependencies": {
    "bun-types": "latest",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "turbo": "^2.5.5"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "framer-motion": "^12.24.12",
    "gsap": "^3.14.2",
    "hono": "^4.11.1",
    "ioredis": "^5.8.2",
    "motion": "^12.26.1",
    "qr-code-styling": "^1.9.2",
    "zod": "^4.2.1"
  }
}
