{
  "name": "melinia",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "bun@1.3.4",
  "scripts": {
    "dev": "turbo dev",
    "dev:outreach": "turbo dev --filter=outreach",
    "dev:api": "turbo dev --filter=api",
    "build": "turbo build",
    "build:outreach": "turbo build --filter=outreach",
    "build:api": "turbo build --filter=api",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "postinstall": "turbo build --filter=shared --filter=api"
  },
  "devDependencies": {
    "bun-types": "latest",
    "turbo": "^2.5.5"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "hono": "^4.11.1"
  }
}
